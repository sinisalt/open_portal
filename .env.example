# OpenPortal Environment Configuration Template
# Copy this file to .env for local development

# Application
NODE_ENV=development
PORT=3000
VITE_API_URL=http://localhost:4000/api

# Authentication Provider Selection
VITE_AUTH_PROVIDER=custom  # 'custom' or 'msal'

# Authentication - Custom OAuth (when VITE_AUTH_PROVIDER=custom)
VITE_AUTH_ENABLED=true
VITE_OAUTH_CLIENT_ID=your-client-id
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Azure MSAL Configuration (when VITE_AUTH_PROVIDER=msal)
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
VITE_AZURE_REDIRECT_URI=http://localhost:3000/auth/callback
VITE_AZURE_TENANT_ID=your-azure-tenant-id

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DEBUG_PANEL=false

# Logging
VITE_LOG_LEVEL=info
VITE_SENTRY_DSN=

# Monitoring & Observability
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ANALYTICS=true

# Branding
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LOCALE=en-US
