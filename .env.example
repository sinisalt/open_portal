# OpenPortal Environment Configuration Template
# Copy this file to .env for local development

# Application
NODE_ENV=development
PORT=3000
REACT_APP_API_URL=http://localhost:4000/api

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_OAUTH_CLIENT_ID=your-client-id
REACT_APP_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# Feature Flags
REACT_APP_ENABLE_WEBSOCKET=true
REACT_APP_ENABLE_OFFLINE_MODE=false
REACT_APP_ENABLE_DEBUG_PANEL=false

# Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_SENTRY_DSN=

# Branding
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_LOCALE=en-US
